# Configurações do servidor
PORT=3000
NODE_ENV=development

# Configurações do Azure Key Vault (somente em produção)
AZURE_KEY_VAULT_NAME=ghbill-dev-kv

# Configurações de segurança
CORS_ORIGIN=http://localhost:3000
COOKIE_DOMAIN=localhost

# Configurações adicionais para desenvolvimento local
# Estas variáveis serão carregadas do Key Vault em produção
# SESSION_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# Configurações do MongoDB para desenvolvimento local
# Em produção, esta URI será carregada do Key Vault
MONGODB_URI=mongodb://localhost:27017/ghbilling